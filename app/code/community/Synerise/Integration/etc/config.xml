<?xml version="1.0"?>
<config>
    <modules>
        <Synerise_Integration>
            <version>1.0.4</version>
        </Synerise_Integration>
    </modules>
    <frontend>
        <layout>
            <updates>
                <synerise_integration>
                    <file>synerise_integration.xml</file>
                </synerise_integration>
            </updates>
        </layout>
    </frontend>  
    <global>
        <blocks>
            <synerise_integration>
                <class>Synerise_Integration_Block</class>
            </synerise_integration>
        </blocks> 
        <models>
            <synerise_integration>
                <class>Synerise_Integration_Model</class>
            </synerise_integration>
        </models>
        <resources>
            <synerise_integration_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </synerise_integration_write>
            <synerise_integration_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </synerise_integration_read>
            <synerise_integration_setup>
                <setup>
                    <module>Synerise_Integration</module>
                </setup>
            </synerise_integration_setup>
            <connection>
                <use>default_setup</use>
            </connection>            
        </resources>
        <helpers>
            <synerise_integration>
                <class>Synerise_Integration_Helper</class>
            </synerise_integration>
        </helpers>
        <events>
            <customer_login>
                <observers>
                    <synerise_integration>
                        <class>synerise_integration/observer</class>
                        <method>customerLogin</method>
                        <type>singleton</type>
                    </synerise_integration>
                </observers>
            </customer_login>
            <customer_logout>
                <observers>
                    <synerise_integration>
                        <class>synerise_integration/observer</class>
                        <method>customerLogout</method>
                        <type>singleton</type>
                    </synerise_integration>
                </observers>
            </customer_logout>
            <customer_register_success>
                <observers>
                    <synerise_integration>
                        <class>synerise_integration/observer</class>
                        <method>customerRegisterSuccess</method>
                        <type>singleton</type>
                    </synerise_integration>
                </observers>
            </customer_register_success>
            <customer_save_before>
                <observers>
                    <synerise_integration>
                        <class>synerise_integration/observer</class>
                        <method>customerSaveBefore</method>
                        <type>singleton</type>
                    </synerise_integration>
                </observers>
            </customer_save_before>
            <customer_save_after>
                <observers>
                    <synerise_integration>
                        <class>synerise_integration/observer</class>
                        <method>customerSaveAfter</method>
                        <type>singleton</type>
                    </synerise_integration>
                </observers>
            </customer_save_after>
            <!--<newsletter_subscriber_save_commit_after>
                <observers>
                    <synerise_integration>
                        <class>synerise_integration/observer</class>
                        <method>customerSubscriberSaveAfter</method>
                        <type>singleton</type>
                    </synerise_integration>
                </observers>
            </newsletter_subscriber_save_commit_after>-->
            <wishlist_product_add_after>
                <observers>
                    <synerise_integration>
                        <class>synerise_integration/observer</class>
                        <method>wishlistProductAddAfter</method>
                        <type>singleton</type>
                    </synerise_integration>
                </observers>
            </wishlist_product_add_after>
            <checkout_cart_add_product_complete>
                <observers>
                    <synerise_integration>
                        <class>synerise_integration/observer</class>
                        <method>customerAddToCart</method>
                        <type>singleton</type>
                    </synerise_integration>
                </observers>
            </checkout_cart_add_product_complete>
            <sales_order_place_after>
                <observers>
                    <synerise_integration>
                        <class>synerise_integration/observer</class>
                        <method>customerOrderComplete</method>
                        <type>singleton</type>
                    </synerise_integration>
                </observers>
            </sales_order_place_after>
            <sales_order_save_after>
                <observers>
                    <synerise_integration>
                        <class>synerise_integration/observer</class>
                        <method>cancelOrderItem</method>
                        <type>singleton</type>
                    </synerise_integration>
                </observers>
            </sales_order_save_after>
            <sales_quote_remove_item>
                <observers>
                    <synerise_integration>
                        <class>synerise_integration/observer</class>
                        <method>customerRemoveFromCart</method>
                        <type>singleton</type>
                    </synerise_integration>
                </observers>
            </sales_quote_remove_item>            
        </events>
    </global>
    <admin>
      <routers>
          <adminhtml>              
              <args>
                  <modules>
                      <synerise_integration after="Mage_Adminhtml">Synerise_Integration_Adminhtml</synerise_integration>
                  </modules>
              </args>
          </adminhtml>
      </routers>
    </admin>    
    <adminhtml>          
        <translate>
            <modules>
                <Synerise_Integration>
                    <files>
                        <default>Synerise_Integration.csv</default>
                    </files>
                </Synerise_Integration>
            </modules>
        </translate>  
    </adminhtml>  
    <frontend>
        <routers>
            <synerise_integration>
                <use>standard</use>
                <args>
                    <module>Synerise_Integration</module>
                    <frontName>synerise_integration</frontName>
                </args>
            </synerise_integration>
        </routers>        
    </frontend>  
    <default>
        <synerise_integration>
            <opengraph>
                <enable>1</enable>
            </opengraph>
            <dev>
                <register_autoloader>1</register_autoloader>
                <autoloader_basepath>lib</autoloader_basepath>
            </dev>
        </synerise_integration>
    </default>

</config>
